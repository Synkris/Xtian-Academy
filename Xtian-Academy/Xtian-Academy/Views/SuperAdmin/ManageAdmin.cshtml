@model IEnumerable<Core.Models.ApplicationUser>
@{
    ViewData["Title"] = "Manage Admin";
    Layout = ViewBag.Layout;
}

<style>

    body {
        counter-reset: Serial; /* / Set the Serial counter to 0 /*/
    }

    tr td:first-child:before  {
        counter-increment: Serial; /* / Increment the Serial counter /*/
        content: counter(Serial); /*  / Display the counter /*/
    }
</style>

<!-- Page Header -->
<div class="page-header">
	<div class="row">
		<div class="col-sm-12">
			<h3 class="page-title">Manage Admin</h3>
		</div>
	</div>
</div>
<!-- /Page Header -->
					
<!-- Search Filter -->
<div class="row filter-row">
	<div class="col-sm-6 col-md-3 mt-1 mb-4">
		<input type="text" class="form-control" id="002" placeholder="Username Search">
	</div>
	<div class="col-sm-6 col-md-3 mt-1 mb-4">
		<input type="text" class="form-control" id="002" placeholder="Phone Number Search">
	</div>
	<div class="col-sm-6 col-md-3 mt-1 mb-4">
		<input type="text" class="form-control" id="002" placeholder="Email Search">
	</div>
	<div class="col-sm-6 col-md-3 mb-4">  
		<a href="#" class="btn newSearchBtn btn-block"> Search </a>
	</div>
</div>
<!-- Search Filter -->

<div class="row">
	<div class="col-md-12">
		@if (@Model.Count() > 0)
		{
			<div class="table-responsive">
				<table class="table table-striped custom-table mb-0 datatable">
					<thead>
						<tr>
							<th>S/N</th>
							<th>First Name</th>
							<th>Last Name</th>
							<th>Email</th>
							<th class="text-center">Date Created</th>
							<th class="text-center">Actions</th>
											
						</tr>
					</thead>
					@foreach(var admin in Model)
					{
						<tbody>
							<tr>
								<td></td>
								<td>@admin.FirstName</td>
								<td>@admin.LastName</td>
								<td>@admin.Email</td>
								<td>@admin.DateRegistered.ToShortDateString()</td>
								@if (@admin.Deactivated)
								{
									<td><i class="fa fa-toggle-off" style="font-size:35px;color:red" onclick="ActivateAndDeactivateAdminPost('Activate', '@admin.Id')"></i></td>
								}
								else
								{
									<td><i class="fa fa-toggle-on" style="font-size:35px;color:green" onclick="ActivateAndDeactivateAdminPost('Deactivate', '@admin.Id')"></i></td>
								}
							</tr>
						</tbody>
					}
				</table>
			</div>
		}
		else
		{
			<div cclass="row p5 m-5">
				<div class="col-md-12 text-center p-5 m5">
					<h2>No Record Found</h2>
				</div>
			</div>
		}
	</div>
</div>
<!-- /Content End -->


