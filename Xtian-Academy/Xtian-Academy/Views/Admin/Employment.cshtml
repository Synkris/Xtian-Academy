<div class="row">
	<div class="col-md-12">
		@if (@Model.Count() > 0 && Model != null)
		{
			<div class="table-responsive">
				<table class="table table-striped custom-table mb-0 datatable">
					<thead>
						<tr>
							<th>S/N</th>
							<th>Name</th>
							<th>Company Name</th>
							<th>Company Address</th>
							<th>Company State</th>
							<th>Company Email</th>
							<th>Company Hr Tel</th>
							<th>Salary Pay Dates</th>
							<th>Job Title</th>
							<th class="text-center">OfferLetter</th>
							<th>Salary</th>
							<th>Deduction(25%)</th>
							<th>Status</th>
							<th class="text-center">Actions</th>
											
						</tr>
					</thead>
					@foreach(var data in Model)
					{
						<tbody>
							<tr>
								<td></td>
								<td>@data.User.FullName</td>
								<td>@data.CompanyName</td>
								<td>@data.CompanyAddress</td>
								<td>@data.CompanyState</td>
								<td>@data.CompanyEmail</td>
								<td>@data.CompanyHrPhoneNO</td>
								<td>@data.MonthlyPaymentDate.ToShortDateString()</td>
								<td>@data.JobTitle</td>
								<td class="text-center">
									<a href="@data.OfferLetter" class="btn newBtn download-offer text-center" download><span><i class="fa fa-download fafaColor mr-1"></i> Download </span></a>
								</td>
								<td>@data.Salary</td>
								<td>@data.MonthlyDeduction</td>
								@if (data.IsApproved)
								{
									<td class="text-success">@data.IsApproved</td>
								}else{

									<td>@data.IsApproved</td>
								}
								<td class="text-center">
									<div class="dropdown dropdown-action">
										<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
										<div class="dropdown-menu dropdown-menu-right">
											<a class="dropdown-item" href="#" data-toggle="modal" data-target="#accept_Submission" onclick="MapID('@data.Id')"><i class="fa fa-check-circle m-r-5 text-success"></i>Approve</a>
											@*<a class="dropdown-item" href="#" data-toggle="modal" data-target="#decliine_Submission" onclick="MapID('@data.Id')"><i class="fa fa-trash-o m-r-5 text-danger"></i>Decline</a>*@
										</div>
									</div>
								</td>
						</tbody>
					}
				</table>
			</div>
		}
		else
		{
			<div cclass="row p5 m-5">
				<div class="col-md-12 text-center p-5 m5">
					<h2>No Record Found</h2>
				</div>
			</div>
		}
	</div>
</div>
<!-- /Content End -->
<!-- Accept Submission Modal -->
<div class="modal custom-modal fade" id="accept_Submission" role="dialog">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-body">
				<div class="form-header">
					<h3>Accept</h3>
					<input hidden id="approveID">
					<p>Are you sure want to approve this submission?</p>
				</div>
				<div class="modal-btn">
					<div class="row">
						<div class="col-6">
							<a class="btn btn-success continue-btn" onclick="AcceptGraduationPost()">Approve</a>
						</div>
						<div class="col-6">
							<a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary cancel-btn">Cancel</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- /Accept Submission Modal -->
